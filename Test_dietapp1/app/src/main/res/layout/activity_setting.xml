<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".ui.notifications.SettingActivity">

    <Button
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật chế độ dinh dưỡng (BMR)"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/black"
        android:gravity="left"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_baseline_account_24"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="88dp"></Button>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật marco dinh dưỡng"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:drawableLeft="@drawable/ic_baseline_fastfood_24"        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="136dp"></Button>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo mới lịch uống nước"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="0dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:drawableLeft="@drawable/ic_baseline_water_drop_24"
        tools:layout_editor_absoluteY="184dp"></Button>

    <Button
        android:id="@+id/LogOut"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng xuất"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="20dp"></Button>

</LinearLayout>

