<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.notifications.WatterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/txView1"
            android:layout_width="267dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:text="Lượng nước bạn cần uống (ml)"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editTextNumber"
            android:background="@drawable/bg_corner_edittext2"
            android:layout_width="95dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="17dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">
        <TextView
            android:id="@+id/txView2"
            android:textColor="@color/black"
            android:layout_width="267dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:text="Kích thước (ml)"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="77dp" />
        <EditText
            android:id="@+id/editTextNumber2"
            android:layout_width="95dp"
            android:layout_height="42dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@drawable/bg_corner_edittext2"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="77dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/txView4"
            android:layout_width="234dp"
            android:layout_height="41dp"
            android:layout_marginStart="16dp"
            android:text="Thời gian ngủ"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="195dp" />

        <EditText
            android:id="@+id/editTextNumber4"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:text="6:30"
            android:background="@drawable/bg_corner_edittext2"
            android:focusable="false"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=" - "
            android:textSize="28dp"
            ></TextView>
        <EditText
            android:id="@+id/editTextNumber5"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:textAlignment="center"
            android:background="@drawable/bg_corner_edittext2"
            android:focusable="false"
            android:text="23:00"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="136dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/txView5"
            android:layout_width="267dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:text="Khoảng thời gian nhắc nhở (phút)"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="16dp" />

        <EditText
            android:id="@+id/editTextNumber6"
            android:layout_width="95dp"
            android:layout_height="42dp"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@drawable/bg_corner_edittext2"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="17dp" />
    </LinearLayout>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/btn_new_water"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:icon="@drawable/ic_baseline_add_alarm_24"
            android:text="Tạo mới lịch uống nước">
        </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
</LinearLayout>


